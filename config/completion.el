;; Search functions (like meow-search) use regexp-search-ring to search from history,
;; so this function makes regexp-search-ring use the history from consult when it is called.
(defun consult-line-plus ()
  (interactive)
  (progn
    (consult-line)
    (setcar regexp-search-ring (car consult--line-history))))

