  (set-fontset-font t 'unicode (font-spec :name "Ark Pixel 10px Monospaced zh_hk") nil 'append)
  (set-fontset-font t 'unicode (font-spec :name "Ark Pixel 10px Monospaced zh_cn") nil 'append)

  (set-fontset-font t 'unicode (font-spec :name "Ark Pixel 12px Monospaced zh_tr") nil 'append)
  (set-fontset-font t 'unicode (font-spec :name "Ark Pixel 12px Monospaced zh_tw") nil 'append)
  (set-fontset-font t 'unicode (font-spec :name "Ark Pixel 12px Monospaced ja") nil 'append)
  (set-fontset-font t 'unicode (font-spec :name "Ark Pixel 12px Monospaced ko") nil 'append)
  (set-fontset-font t 'unicode (font-spec :name "Ark Pixel 12px Monospaced zh_hk") nil 'append)
  (set-fontset-font t 'unicode (font-spec :name "Ark Pixel 12px Monospaced zh_cn") nil 'append)

  (set-fontset-font t 'unicode (font-spec :name "Ark Pixel 16px Monospaced zh_tr") nil 'append)
  (set-fontset-font t 'unicode (font-spec :name "Ark Pixel 16px Monospaced zh_tw") nil 'append)
