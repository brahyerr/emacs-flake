  (set-fontset-font t 'unicode (font-spec :name "DejaVu Sans Mono") nil 'append)
  (set-frame-font "lemon" nil t)
  ;; Set the variable pitch face
  (set-face-attribute 'variable-pitch nil :font "Terminus" :height 160 :weight 'regular)
  ;; CJK fonts
  (set-fontset-font t 'unicode (font-spec :name "Ark Pixel 10px Monospaced zh_tr") nil 'append)
  (set-fontset-font t 'unicode (font-spec :name "Ark Pixel 10px Monospaced zh_tw") nil 'append)
